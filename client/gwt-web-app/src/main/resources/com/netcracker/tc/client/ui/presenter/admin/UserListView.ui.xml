<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:table="urn:import:com.netcracker.tc.client.ui.widget.user"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='image' type='com.netcracker.tc.client.resource.ImageBundle'/>

    <g:HTMLPanel>
        <b:Heading size="2">Пользователи</b:Heading>
        <table:UserAsyncTableWidget ui:field="userTable"/>
        <b:FormActions>
            <b:Button ui:field="addUserButton" type="INFO">Добавить</b:Button>
            <b:Button ui:field="changePasswordButton" type="INFO">Изменить пароль</b:Button>
            <!--<b:Button ui:field="deleteUserButton" type="INFO">Удалить</b:Button>-->
        </b:FormActions>
    </g:HTMLPanel>
</ui:UiBinder>