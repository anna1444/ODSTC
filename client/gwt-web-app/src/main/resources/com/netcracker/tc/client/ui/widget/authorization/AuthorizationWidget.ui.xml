<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='image' type='com.netcracker.tc.client.resource.ImageBundle'/>

    <b:Fieldset>

        <b:AlertBlock ui:field="errorMessageAlertBlock" type="WARNING" close="false" visible="false"/>
            <b:ControlGroup ui:field="loginGroup">
                <b:ControlLabel for="loginInput">Email</b:ControlLabel>
                <b:Controls>
                    <b:TextBox ui:field="loginField" alternateSize="XLARGE" b:id="loginInput"/>
                </b:Controls>
            </b:ControlGroup>
            <b:ControlGroup ui:field="passwordGroup">
                <b:ControlLabel for="passwordInput">Пароль</b:ControlLabel>
                <b:Controls>
                    <b:PasswordTextBox ui:field="passwordField" alternateSize="XLARGE" b:id="passwordInput"/>
                </b:Controls>
            </b:ControlGroup>

    </b:Fieldset>

</ui:UiBinder>