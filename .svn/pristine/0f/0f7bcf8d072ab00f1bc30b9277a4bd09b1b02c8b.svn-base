<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='image' type='com.netcracker.tc.client.resource.ImageBundle'/>

    <g:DialogBox modal="true">
        <!--<b:WellForm>-->
        <b:Fieldset>
            <b:Legend>
                Изменить пароль
            </b:Legend>

            <b:ControlGroup>
                <b:ControlLabel>Пароль</b:ControlLabel>
                <b:Controls>
                    <b:PasswordTextBox ui:field="passwordField" alternateSize="XLARGE" />
                </b:Controls>
            </b:ControlGroup>

            <b:ControlGroup>
                <b:ControlLabel>Подтверждение пароля</b:ControlLabel>
                <b:Controls>
                    <b:PasswordTextBox ui:field="confirmPasswordField" alternateSize="XLARGE" />
                </b:Controls>
            </b:ControlGroup>

            <b:FormActions>
                <b:Button ui:field="saveButton" type="INFO">Изменить</b:Button>
                <b:Button ui:field="cancelButton" type="INFO">Отмена</b:Button>
            </b:FormActions>
        </b:Fieldset>
        <!--</b:WellForm>-->
    </g:DialogBox>
</ui:UiBinder> 